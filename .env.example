# Epica SaaS - Environment Configuration

# Database Configuration
DATABASE_URL=postgresql://epica_user:your_secure_password@localhost/epica_saas

# Application Security
SECRET_KEY=your-super-secret-key-change-this-in-production
SECURITY_PASSWORD_SALT=your-password-salt-change-this

# Domain Configuration
MAIN_DOMAIN=epica.com.tr
ALLOWED_HOSTS=epica.com.tr,*.epica.com.tr

# Email Configuration (SMTP)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=noreply@epica.com.tr
MAIL_PASSWORD=your-email-password
MAIL_DEFAULT_SENDER=noreply@epica.com.tr

# Redis Configuration (Caching & Sessions)
REDIS_URL=redis://localhost:6379/0

# Celery Configuration (Background Tasks)
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# File Storage (Production - AWS S3)
S3_BUCKET=epica-files
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=eu-west-1

# Monitoring & Logging
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# SSL Certificate (Let's Encrypt)
SSL_CERT_PATH=/etc/letsencrypt/live/epica.com.tr/fullchain.pem
SSL_KEY_PATH=/etc/letsencrypt/live/epica.com.tr/privkey.pem

# API Rate Limiting
RATE_LIMIT_STORAGE_URL=redis://localhost:6379/3

# Application Settings
FLASK_ENV=production
DEBUG=false
TESTING=false

# Subscription & Payment
STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_key
STRIPE_SECRET_KEY=sk_live_your_stripe_secret
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Backup Configuration
BACKUP_S3_BUCKET=epica-backups
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM

# CDN Configuration
CDN_DOMAIN=cdn.epica.com.tr
STATIC_URL_PATH=/static

# Analytics
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX-X

# Support & Help
INTERCOM_APP_ID=your-intercom-app-id
ZENDESK_SUBDOMAIN=epica

# Multi-tenant Limits
MAX_TENANTS=1000
DEFAULT_TENANT_STORAGE_GB=10
MAX_TENANT_STORAGE_GB=100

# Security Headers
FORCE_HTTPS=true
HSTS_MAX_AGE=31536000
